<odoo>
    <data>
        <record id="view_oms_catalog_product_template_form" model="ir.ui.view">
            <field name="name">oms.catalog.view.product.template.view_product_template_form.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="Mercantil" name="merchant_account">
                        <group>
                            <field name="product_service_subservices"/>
                        </group>                    
                    </page>                
                </xpath>
            </field>
        </record>
    </data>
</odoo>